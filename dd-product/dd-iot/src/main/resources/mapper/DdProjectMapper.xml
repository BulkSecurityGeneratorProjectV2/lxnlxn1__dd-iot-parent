<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dreamdeck.iot.mapper.DdProjectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.dreamdeck.model.iot.DdProject">
        <id column="project_id" property="projetId"/>
        <result column="project_name" property="projectName"/>
        <result column="project_desc" property="projectDesc"/>
        <result column="project_type" property="projectType"/>
        <result column="project_site" property="projectSite"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="project_img" property="projectImg"/>
    </resultMap>
    <!-- 通过用户ID，查询角色信息-->
    <select id="listProjectByUserId" resultMap="BaseResultMap">
        SELECT
           p.*
        FROM
        dd_project p,dd_project_team t where p.project_id = t.project_id and t.user_id IN (#{userId})
    </select>
</mapper>
